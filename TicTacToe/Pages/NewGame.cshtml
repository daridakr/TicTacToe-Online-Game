@page
@model IndexModel
@{
    ViewData["Title"] = "New game";
    
}
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <p id="userName">@Model.userName</p>
        <div class="col-3">Room name</div>
        <div class="col-4"><input type="text" id="roomName" /></div>
        <div class="col-2"><input type="button" id="createRoom" value="Create Room" /></div>
    </div>
    <p id="message"></p>
</div>
    
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
    <div id="ongoing">
        @foreach (var x in TicTacToe.Hubs.GroupHandler.OngoingGames)
        {<p>Room name: @x<button class="watchGame" name="@x">Watch game</button></p>}
    </div>
    <div>
        <h3>Statistics</h3>
        <h4>Total games played: @TicTacToe.Hubs.UserHandler.GamesPlayed</h4>

        @foreach (var x in TicTacToe.Hubs.UserHandler.Users)
        {<p>@x._Name has won @x.Wins times, lost @x.Losses times and has @x.Draws draws</p>}
    </div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/newGameLogic.js"></script>